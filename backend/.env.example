# Database connection (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/neurasec_auth"

# JWT Secret Key (generate a secure random string for production)
SECRET_KEY="CHANGEME_super_secret_key_for_jwt_token_generation"

# Admin API Key (generate a secure random string for production)
ADMIN_API_KEY="CHANGEME_admin_api_key"

# Email settings (SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@neurasec.com"

# SendGrid (optional)
USE_SENDGRID=false
SENDGRID_API_KEY="your-sendgrid-api-key"

# Google OAuth (required for Google Sign-In)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# API Server settings
API_HOST="0.0.0.0"
API_PORT=8000 